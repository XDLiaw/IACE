<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />

	<!-- package "name" attribute doesn't matter, just need to be only -->
	<package name="HelloWorld" namespace="/practice/HelloWorld" extends="struts-default">
		<action name="index">
			<result>/WEB-INF/jsp/com/sysvin/practice/helloWorld/index.jsp</result>
		</action>
		<action name="execute" class="com.sysvin.practice.helloWorld.action.HelloWorld" method="execute">
			<result name="success">/WEB-INF/jsp/com/sysvin/practice/helloWorld/HelloWorld.jsp
			</result>
		</action>
	</package>
	
	<package name="Struts2Validation" namespace="/practice/xmlValidation" extends="struts-default" >
        <action name="execute" class="com.sysvin.practice.xmlValidation.action.LoginAction" method="execute">
            <result name="success" type="redirect">/WEB-INF/jsp/com/sysvin/practice/xmlValidation/LoginSuccess.jsp</result>
            <result name="input">/WEB-INF/jsp/com/sysvin/practice/xmlValidation/LoginForm.jsp</result>
        </action>
        <action name="doLogin" class="com.sysvin.practice.xmlValidation.action.LoginAction" method="doLogin">
            <result name="success" type="redirect">/WEB-INF/jsp/com/sysvin/practice/xmlValidation/LoginSuccess.jsp</result>
            <result name="input">/WEB-INF/jsp/com/sysvin/practice/xmlValidation/LoginForm.jsp</result>
        </action>
    </package>
    
    <package name="dbAccess" namespace="/practice/dbAccess" extends="struts-default">
    	<action name="login" class="com.sysvin.practice.dbAccess.action.LoginAction" method="login">
    		<result name="input">/WEB-INF/jsp/com/sysvin/practice/dbAccess/LoginForm.jsp</result>
    		<result name="success">/WEB-INF/jsp/com/sysvin/practice/dbAccess/LoginSuccess.jsp</result>
    	</action>
    </package>
 
	<package name="hibernate" namespace="/practice/hibernate" extends="struts-default">
		<action name="registerInput" class="com.sysvin.practice.hibernate.action.UserAction" method="registerInput">
			<result name="input">/WEB-INF/jsp/com/sysvin/practice/hibernate/RegisterInput.jsp</result>
		</action>		
		<action name="register" class="com.sysvin.practice.hibernate.action.UserAction" method="register">
			<result name="input">/WEB-INF/jsp/com/sysvin/practice/hibernate/RegisterInput.jsp</result>
			<result name="success">/WEB-INF/jsp/com/sysvin/practice/hibernate/RegisterSuccess.jsp</result>
		</action>
		<action name="findUserByPhoneInput" class="com.sysvin.practice.hibernate.action.UserAction" method="findUserByPhoneInput">
			<result name="input">/WEB-INF/jsp/com/sysvin/practice/hibernate/FindUserByPhone.jsp</result>
		</action>
		<action name="findUserByPhone" class="com.sysvin.practice.hibernate.action.UserAction" method="findUserByPhone">
			<result name="input">/WEB-INF/jsp/com/sysvin/practice/hibernate/FindUserByPhone.jsp</result>
			<result name="success">/WEB-INF/jsp/com/sysvin/practice/hibernate/FindUserByPhone.jsp</result>
		</action>
	</package>



	<!-- Add packages here -->

</struts>
