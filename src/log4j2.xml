<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss} %-5p (%F:%L) --- %m%n" />
		</Console>
 		<RollingFile name="DailyFile" fileName="ex2.log"
			filePattern="ex2-%d{yyyyMMdd-HH}~%i.log">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %c:%L - %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
		</RollingFile>
 		<File name="TEMP" fileName="temp.log">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</File> 
	</Appenders>

	<Loggers>
		<Logger name="com.opensymphony.xwork2" level="warn" />
		<Logger name="org.apache.struts2" level="warn" />
		<Root level="warn">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="DailyFile" />
			<AppenderRef ref="TEMP" />
		</Root>
		<Logger name="core.action.BaseAction" level="debug" />
		<Logger name="core.service.BaseService" level="debug" />
		<Logger name="core.dao.BaseDao" level="debug" />
	</Loggers>
</Configuration>